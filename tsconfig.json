{
  "compilerOptions": {
    "declaration": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "src",
    "baseUrl": "./src",
    "outDir": "dist",
    "lib": ["es2020", "dom"],
    "types": ["node", "mocha"],
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**", "src/**/__tests__"],
  "compileOnSave": false,
  "ts-node": {
    "files": true
  }
}

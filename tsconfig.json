{
  "compilerOptions": {
    "declaration": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "lib": ["es2020", "dom"],
    "types": ["node", "mocha"],
    "typeRoots": ["node_modules/@types", "src/global.d.ts"]
  },
  "exclude": ["src/**/__tests__", "test", "dist"],
  "compileOnSave": false,
  "ts-node": {
    "files": true
  }
}

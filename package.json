{
  "name": "@railgun-community/relayer",
  "version": "4.0.0",
  "description": "",
  "main": "dist/main.js",
  "packageManager": "pnpm@8.2.0",
  "engines": {
    "node": ">=16.15.0"
  },
  "files": [
    "dist",
    "*.md"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts --fix && tsc --noEmit && tsc -p tsconfig.test.json --noEmit",
    "compile": "npm run clean && npm run lint && tsc && tsc-alias",
    "start": "node --max-old-space-size=8192 dist/main.js",
    "debug": "npm run compile && env-cmd -e all,debug npm start",
    "compile-test": "npm run clean && tsc -p tsconfig.test.json && tsc-alias",
    "test": "npm run compile-test && env-cmd --no-override -e all,test mocha 'src/**/__tests__/*.test.ts'",
    "test-hardhat": "env RUN_HARDHAT_TESTS=true npm run test",
    "test-coverage": "npm run compile-test && env-cmd --no-override -e all,test nyc mocha 'src/**/__tests__/*.test.ts'",
    "copy-my-config": "./scripts/copy-my-config.sh",
    "postinstall": "npm run lint"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@0x/contract-addresses": "^8.5.0",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bignumber": "^5.7.0",
    "@ethersproject/contracts": "^5.7.0",
    "@ethersproject/hdnode": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@ethersproject/sha2": "^5.7.0",
    "@ethersproject/shims": "^5.7.0",
    "@ethersproject/transactions": "^5.7.0",
    "@ethersproject/units": "^5.7.0",
    "@ethersproject/wallet": "^5.7.0",
    "@noble/ed25519": "^1.7.1",
    "@railgun-community/quickstart": "4.3.22",
    "@railgun-community/shared-models": "4.2.2",
    "@walletconnect/jsonrpc-types": "^1.0.2",
    "@walletconnect/jsonrpc-utils": "^1.0.7",
    "axios": "1.3.6",
    "debug": "^4.3.4",
    "docker-secret": "^2.0.6",
    "ethers": "^5.7.2",
    "i": "^0.3.7",
    "leveldown": "^6.1.1",
    "npm": "^9.6.5",
    "prompt-sync": "^4.2.0",
    "snarkjs": "^0.6.10",
    "tslib": "^2.5.0",
    "web3-core": "^1.9.0",
    "web3-eth": "^1.9.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/debug": "^4.1.7",
    "@types/leveldown": "^4.0.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.16.0",
    "@types/prompt-sync": "^4.2.0",
    "@types/sinon": "^10.0.14",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "bn.js": "^5.2.1",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "env-cmd": "^10.1.0",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "got": "^12.6.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "sinon": "^15.0.4",

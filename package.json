{
  "name": "relayer",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "engines": {
    "node": ">=16.6.2"
  },
  "files": [
    "dist",
    "src",
    "*.md"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts",
    "compile": "npm run clean && tsc && tsc-alias",
    "start": "npm run compile && node dist/main.js",
    "debug": "env DEBUG=relayer*,waku:jsonrpc-api env-cmd -e all,debug npm start",
    "compile-test": "npm run clean && tsc --project tsconfig.test.json && tsc-alias",
    "test": "npm run compile-test && env-cmd -e all,test mocha 'src/**/__tests__/*.test.ts'",
    "test-coverage": "npm run compile-test && env-cmd -e all,test nyc mocha 'src/**/__tests__/*.test.ts'",
    "copy-my-config": "cp -n ./src/MY-CONFIG.example.ts ./src/MY-CONFIG.ts",
    "prepare": "npm run copy-my-config && npm run compile"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ethersproject/providers": "^5.5.2",
    "@ethersproject/shims": "^5.5.0",
    "@noble/ed25519": "^1.6.0",
    "@railgun-community/lepton": "https://npm.railgun.org/ci/0.0.10/railgun-community-lepton-0.0.10.tgz",
    "@walletconnect/jsonrpc-types": "^1.0.0",
    "@walletconnect/jsonrpc-utils": "^1.0.0",
    "axios": "^0.24",
    "debug": "^4.3.3",
    "docker-secret": "^1.2.4",
    "ethers": "^5.5.3",
    "level": "^7.0.1",
    "leveldown": "^6.1.0",
    "railgun-artifacts": "https://npm.railgun.org/railgun-artifacts-0.0.1.tgz"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/debug": "^4.1.7",
    "@types/level": "^6.0.0",
    "@types/leveldown": "^4.0.3",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.12",
    "@types/sinon": "^10.0.8",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "bn.js": "^5.2.0",
    "chai": "^4.3.5",
    "chai-as-promised": "^7.1.1",
    "env-cmd": "^10.1.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "mocha": "^9.2.0",
    "nyc": "^15.1.0",
    "sinon": "^12.0.1",
    "ts-node": "^10.4.0",
    "tsc-alias": "^1.5.0",
    "typescript": "^4.5.4"
  }
}

{
  "name": "@railgun-community/relayer",
  "version": "1.0.2",
  "description": "",
  "main": "dist/main.js",
  "engines": {
    "node": ">=16.6.2"
  },
  "files": [
    "dist",
    "src",
    "*.md"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts && tsc",
    "compile": "npm run clean && tsc && tsc-alias",
    "start": "npm run compile && node dist/main.js",
    "debug": "env-cmd -e all,debug npm start",
    "compile-test": "npm run clean && tsc --project tsconfig.test.json && tsc-alias",
    "test": "npm run compile-test && env-cmd --no-override -e all,test mocha 'src/**/__tests__/*.test.ts'",
    "test-coverage": "npm run compile-test && env-cmd --no-override -e all,test nyc mocha 'src/**/__tests__/*.test.ts'",
    "copy-my-config": "cp -n ./src/MY-CONFIG.example.ts ./src/MY-CONFIG.ts",
    "prepare": "npm run copy-my-config && npm run compile"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ethersproject/providers": "^5.6.4",
    "@ethersproject/shims": "^5.6.0",
    "@noble/ed25519": "^1.6.0",
    "@railgun-community/lepton": "https://npm.railgun.org/ci/0.0.48/railgun-community-lepton-0.0.48.tgz",
    "@walletconnect/jsonrpc-types": "^1.0.0",
    "@walletconnect/jsonrpc-utils": "^1.0.0",
    "axios": "^0.27",
    "debug": "^4.3.4",
    "docker-secret": "^1.2.4",
    "ethers": "^5.6.4",
    "leveldown": "^6.1.1",
    "railgun-artifacts-node": "https://npm.railgun.org/railgun-artifacts-node-0.1.0.tgz"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/debug": "^4.1.7",
    "@types/leveldown": "^4.0.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.29",
    "@types/sinon": "^10.0.11",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "bn.js": "^5.2.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "env-cmd": "^10.1.0",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^7.0.4",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "sinon": "^13.0.2",
    "ts-node": "^10.7.0",
    "tsc-alias": "^1.6.7",
    "typescript": "^4.6.3"
  }
}

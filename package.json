  "scripts": {
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts && tsc",
    "compile": "npm run clean && tsc && tsc-alias",
    "start": "node --max-old-space-size=8192 dist/main.js",
    "debug": "npm run compile && env-cmd -e all,debug npm start",
    "compile-test": "npm run clean && tsc --project tsconfig.test.json && tsc-alias",
    "test": "npm run compile-test && env-cmd --no-override -e all,test mocha 'src/**/__tests__/*.test.ts'",
    "test-coverage": "npm run compile-test && env-cmd --no-override -e all,test nyc mocha 'src/**/__tests__/*.test.ts'",
    "copy-my-config": "./scripts/copy-my-config.sh",
    "prepare": "npm run compile"
  },

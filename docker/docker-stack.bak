version: '3.9'

networks:
  relayer:

volumes:
  nwaku:
    name: 'nwaku'
  relayer:
    name: 'relayer'

services:
  nwaku:
    image: nwaku:latest
    hostname: 'nwaku'
    networks:
      - relayer
    ports:
      - 60000:60000
      - 9000:9000
      - 8000:8000 # wss proxied through swag
      - 8546:8546
    volumes:
      - nwaku:/data
      - ./appdata/swag/etc/letsencrypt:/ssl
    depends_on:
      - swag
    healthcheck:
      test: curl --fail http://localhost:8546 || exit 1
      interval: 60s
      retries: 4
      start_period: 10s
      timeout: 5s
    entrypoint: >
      wakunode2
        --config-file=/app/config.toml
        --nat="extip:68.58.173.20"
        --listen-address="0.0.0.0"
        --dns4-domain-name="dev.of.holdings"
        --nodekey="0x017eef01f33881e2edba7e5e93656b1c09ec8ca88431b52a1a3dfb1c9056b0e5"
        --websocket-support=true
        --websocket-secure-support=true
        --websocket-secure-key-path="/ssl/live/dev.of.holdings/privkey.pem"
        --websocket-secure-cert-path="/ssl/live/dev.of.holdings/fullchain.pem"

  relayer:
    image: relayer:latest
    hostname: 'relayer'
    networks:
      - relayer
    environment:
      WAKU_RPC_URL: 'http://nwaku:8546'
      LEPTON_DB: '/mnt/relayer.db'
      LOG_LEVEL: 'debug'
      DEBUG: 'relayer*,waku:jsonrpc-api'
    secrets:
      - MNEMONIC
      - DB_ENCRYPTION_KEY
    depends_on:
      - nwaku
    volumes:
      - relayer:/mnt
    command: sh -c './scripts/wait-for nwaku:8546 -t 30 -- npm start'

  swag:
    image: ghcr.io/linuxserver/swag
    cap_add:
      - NET_ADMIN
    networks:
      - relayer
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=EST
      - URL=of.holdings
      - ONLY_SUBDOMAINS=true
      - SUBDOMAINS=dev
      - VALIDATION=http
      - EMAIL=dylan.oliver@gmail.com
    volumes:
      - ./appdata/swag:/config
      - ./swag/nwaku.subdomain.conf:/config/nginx/proxy-confs/nwaku.subdomain.conf
    ports:
      - 443:443
      - 80:80
      #- 8000:8000 # wss proxied to nwaku

secrets:
  MNEMONIC:
    external: true
  DB_ENCRYPTION_KEY:
    external: true

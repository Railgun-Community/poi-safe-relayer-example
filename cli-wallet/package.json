{
  "name": "railgun",
  "description": "A command line (CLI) wallet app for working a Railgun Relayers RPC",
  "version": "v1.0.0",
  "author": "Railgun Contributors",
  "contributors": [
    "Chris Troutner <chris.troutner@gmail.com>"
  ],
  "bin": {
    "railgun": "./bin/run"
  },
  "bugs": "https://github.com/Railgun-Community/lepton/issues",
  "dependencies": {
    "@chris.troutner/ipfs": "2.0.2",
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1.17.0",
    "@oclif/plugin-help": "^3.2.2",
    "@psf/bch-js": "^4.20.13",
    "axios": "^0.21.1",
    "cli-table": "^0.3.6",
    "collect.js": "^4.28.6",
    "conf-cli": "^0.1.9",
    "ipfs-coord": "^6.7.1",
    "jsonrpc-lite": "^2.2.0",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.0.0",
    "minimal-slp-wallet": "^3.4.7",
    "semver": "^7.3.5",
    "shelljs": "^0.8.4",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.26.0",
    "@oclif/test": "^1.2.8",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-oclif": "^3.1.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^7.0.1",
    "lodash.clonedeep": "^4.5.0",
    "mocha": "^9.0.3",
    "nyc": "^15.1.0",
    "semantic-release": "^17.4.4",
    "sinon": "^9.2.4",
    "standard": "^16.0.3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json",
    "/src"
  ],
  "homepage": "https://github.com/Railgun-Community/lepton#readme",
  "keywords": [
    "oclif"
  ],
  "license": "UNLICENSED",
  "main": "src/index.js",
  "oclif": {
    "commands": "./src/commands",
    "bin": "railgun",
    "plugins": [
      "@oclif/plugin-help",
      "conf-cli"
    ]
  },
  "repository": "Railgun-Community/lepton",
  "scripts": {
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "oclif-dev manifest && oclif-dev readme",
    "test": "nyc mocha --exit --timeout 15000 --recursive test/unit/",
    "version": "oclif-dev readme && git add README.md",
    "lint": "standard --env mocha --fix",
    "coverage:report": "nyc --reporter=html mocha --exit --timeout 15000 --recursive test/unit/"
  },
  "release": {
    "publish": [
      {
        "path": "@semantic-release/npm",
        "npmPublish": false
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
